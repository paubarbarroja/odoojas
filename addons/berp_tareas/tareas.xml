<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<!-- ##################### Tree Tareas ##################### -->
	<record model="ir.ui.view" id="berp_20200218_1444_tree">
        <field name="name">tareas</field>
        <field name="model">berp.tarea</field>
        <field name="arch" type="xml">
            <tree string="Tareas">
	            <field name="descripcion"/>
                <field name="comentario"/>
                <field name="fecha_demanda"/>
                <field name="solicitado_por"/>
                <field name="tiempo_imputado"/>
                <field name="publicado"/>
            </tree>
        </field>
    </record>


	<!-- ##################### Formulario Tarea ##################### -->
    <record id="berp_20200218_1445_form" model="ir.ui.view">
        <field name="name">tarea</field>
        <field name="model">berp.tarea</field>
        <field name="arch" type="xml">
            <form string="Tarea">
                <sheet>
                    <button name="cerrar_tarea" type="object" string="Cerrar" attrs="{'invisible':[('estado', '!=', 'acabada')]}"/>
                    <button name="acabar_tarea" type="object" string="Acabar" attrs="{'invisible':[('estado', '!=', 'pendiente')]}"/>
                    <button name="reabrir_tarea" type="object" string="Reabrir" attrs="{'invisible':[('estado', '!=', 'acabada')]}"/>
                    <field name="estado" widget="statusbar" class="oe_right"/>
	                <table style="width:60%">
		                <tr>
			                <td><group><field name="descripcion" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
		                <tr>
			                <td><group><field name="comentario" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
		                <tr>
			                <td><group><field name="fecha_demanda" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
		                <tr>
			                <td><group><field name="solicitado_por" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
		                <tr>
			                <td><group><field name="tiempo_imputado" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
		                <tr>
			                <td><group><field name="publicado" attrs="{'readonly':[('estado', '!=', 'pendiente')]}"/></group></td>
		                </tr>
	                </table>
                </sheet>
            </form>
        </field>
    </record>

	<record id="berp_18022020_1500_action" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">berp.tarea</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>