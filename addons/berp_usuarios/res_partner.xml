<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="berp_21082019_1027_form" model="ir.ui.view">
        <field name="name">berp_res_partner_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="company_type"]' position='replace'>
            </xpath>
            <xpath expr='//field[@name="parent_id"]' position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="street2"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="vat"]' position="replace">
                <field name="dni" data-inputmask="'mask': '99999999A'"/>
                <field name="fecha_nac"/>
            </xpath>
            <xpath expr='//field[@name="function"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="mobile"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="website"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="title"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//field[@name="lang"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//page[@name="contacts_and_addresses"]' position="replace">
                <page name="socio_page" string="Socio">
                    <group col="2">
                        <field name="fecha_alta"/>
                        <field name="fecha_baja"/>
                        <field name="socio_honorario"/>
                    </group>
                </page>
                <page name="atleta_page" string="Atleta" >
                    <group col="2">
                        <field name="genero"/>
                        <field name="especialidad"/>
                        <field name="ficha"/>
                        <field name="categoria"/>
                        <field name="grupo_entreno"/>
                    </group>
                </page>
            </xpath>
            <xpath expr='//page[@name="internal_notes"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//page[@name="sales_purchases"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//page[@name="accounting"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="berp_29082019_2241_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partners">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div class="oe_title">
                        <field name="type_user" widget="radio"
                            class="oe_edit_only"
                            options="{'horizontal': true}"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" string="Nacionalidad" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            <field name="dni" data-inputmask="'mask': '99999999A'"/>
                            <field name="fecha_nac"/>
                           </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="user_id"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="socio_page" string="Socio">
                            <group col="2">
                                <field name="fecha_alta"/>
                                <field name="fecha_baja"/>
                                <field name="socio_honorario"/>
                            </group>
                        </page>
                        <page name="atleta_page" string="Atleta" >
                            <group col="2">
                                <field name="genero"/>
                                <field name="especialidad"/>
                                <field name="ficha"/>
                                <field name="categoria"/>
                                <field name="grupo_entreno"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>



    <!-- ##################### SOCIS ##################### -->
    <record id="berp_28082019_1258_action" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_type','=','person')]</field>
    </record>
    <record model="ir.actions.act_window.view" id="berp_28082019_1258_action_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="berp_28082019_1258_action"/>
   </record>
    <record model="ir.actions.act_window.view" id="berp_04062019_1940_action_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="berp_21082019_1027_form"/>
        <field name="act_window_id" ref="berp_28082019_1258_action"/>
   </record>

    <!-- ##################### ATLETAS ##################### -->
    <record id="berp_29082019_1841_action" model="ir.actions.act_window">
        <field name="name">Atletas</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_type','=','person')]</field>
    </record>
    <record model="ir.actions.act_window.view" id="berp_29082019_1841_action_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="berp_29082019_1841_action"/>
   </record>
    <record model="ir.actions.act_window.view" id="berp_29082019_1841_action_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="berp_21082019_1027_form"/>
        <field name="act_window_id" ref="berp_29082019_1841_action"/>
   </record>




</odoo>
