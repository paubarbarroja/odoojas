<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="berp_21052019_2054_tree">
        <field name="name">socio_tree</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
            <tree string="Socios">
                <field name="ficha"/>
                <field name="nombre"/>
                <field name="genero"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="berp_21052019_2054_form">
        <field name="name">socio_form</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
             <form string="Socio">
                 <sheet>
                     <group col="2">
                         <field name="imagen" widget="image" class="oe_avatar"/>
                         <div class="oe_title">
                            <label for="Nombre" class="oe_edit_only"/>
                            <h1>
                                <field name="nombre" placeholder="Nombre del Socio"/>
                            </h1>
                        </div>
                     </group>
                     <field name="tipo" widget="many2many_tags" placeholder="Atleta, Entrenador, ..."/>
                     <notebook>
                        <page name="inf_socio" string="Información del Socio">
                            <group col="2">
                                <group col="2">
                                    <field name="ficha"/>
                                    <field name="dni"/>
                                    <field name="correo"/>
                                    <field name="telefono"/>
                                </group>
                                <group col="2">
                                    <field name="fecha_nac"/>
                                    <field name="genero"/>
                                    <field name="nacionalidad"/>
                                    <field name="direccion"/>
                                </group>
                            </group>
                        </page>
                        <page name="inf_otra" string="Otra información">
                            <group col="2">
                                <group col="2">
                                    <field name="nombre_cont"/>
                                    <field name="telef_cont"/>
                                </group>
                                <group col="2">
                                    <field name="cuenta_banc"/>
                                    <field name="especialidad"/>
                                </group>
                            </group>
                        </page>
                     </notebook>
                 </sheet>
             </form>
        </field>
    </record>


    <record id="berp_21052019_2054_action" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>