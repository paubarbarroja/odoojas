<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="berp_21052019_2054_tree">
        <field name="name">socio_tree</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
            <tree string="Socios">
                <field name="ficha"/>
                <field name="nombre"/>
                <field name="genero"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="berp_21052019_2054_form">
        <field name="name">socio_form</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
             <form string="Socio">
                 <sheet>
                     <field name="imagen" widget="image" class="oe_avatar" nolabel="1"/>
                     <div class="oe_title">
                        <label for="Nombre" class="oe_edit_only" string="Nombre"/>
                        <h1>
                            <field name="nombre" placeholder="Nombre del Socio" nolabel="1"/>
                        </h1>
                     </div>
                     <field name="tipo" widget="many2many_tags" placeholder="Atleta, Entrenador, ..." options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                     <notebook>
                        <page name="inf_socio" string="Información del Socio">
                            <group col="2">
                                <group col="2">
                                    <field name="ficha"/>
                                    <field name="dni"/>
                                    <field name="correo"/>
                                    <field name="telefono"/>
                                </group>
                                <group col="2">
                                    <field name="fecha_nac"/>
                                    <field name="genero"/>
                                    <field name="nacionalidad" options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                                    <field name="direccion"/>
                                </group>
                            </group>
                        </page>
                        <page name="inf_atleta" string="Información del Atleta">
                            <group col="2">
                                <field name="especialidad"/>
                                <field name="grupo_entreno" options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                            </group>
                        </page>
                        <page name="inf_otra" string="Otra información">
                            <group col="2">
                                <group col="2">
                                    <field name="nombre_cont"/>
                                    <field name="telef_cont"/>
                                </group>
                                <group col="2">
                                    <field name="cuenta_banc"/>
                                    <field name="especialidad"/>
                                    <field name="grupo_entreno" options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                                </group>
                            </group>
                        </page>
                     </notebook>
                 </sheet>
             </form>
        </field>
    </record>


    <record id="berp_21052019_2054_action_todos" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="berp_21052019_2054_action_atl" model="ir.actions.act_window">
        <field name="name">Atletas</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Atleta')]</field>
    </record>

    <record id="berp_21052019_2054_action_sin_ficha" model="ir.actions.act_window">
        <field name="name">Socios Sin Ficha</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Sin Ficha')]</field>
    </record>

    <record id="berp_21052019_2054_action_entrenadores" model="ir.actions.act_window">
        <field name="name">Entrenadores</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Entrenador')]</field>
    </record>

</odoo>