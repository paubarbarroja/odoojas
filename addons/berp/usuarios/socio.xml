<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="berp_21052019_2054_form">
        <field name="name">socio_form</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
            <form string="Socio">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar" nolabel="1"/>
                    <div class="oe_title">
                        <label for="Nombre" class="oe_edit_only" string="Nombre"/>
                        <h1>
                            <field name="nombre" placeholder="Nombre del Socio" nolabel="1"/>
                        </h1>
                    </div>
                    <field name="tipo" widget="many2many_tags" placeholder="Atleta, Entrenador, ..." options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                    <notebook>
                        <page name="inf_socio" string="Información del Socio">
                            <group col="2">
                                <group col="2">
                                    <field name="ficha"/>
                                    <field name="dni" groups="berp.berp_admin, berp.berp_dt"/>
                                    <field name="correo"/>
                                    <field name="telefono"/>
                                </group>
                                <group col="2">
                                    <field name="fecha_nac"/>
                                    <field name="genero"/>
                                    <field name="nacionalidad" options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                                    <field name="direccion" groups="berp.berp_admin, berp.berp_dt"/>
                                </group>
                            </group>
                        </page>
                        <page name="inf_otra" string="Otra información" groups="berp.berp_admin, berp.berp_dt">
                            <group col="2">
                                <group col="2">
                                    <field name="nombre_cont"/>
                                    <field name="telef_cont"/>
                                </group>
                                <group col="2">
                                    <field name="cuenta_banc" data-inputmask="'mask': 'ES99-9999-9999-9999-9999-9999'"/>
                                    <field name="titular_cc"/>
                                    <field name="user"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="berp_21052019_2054_tree">
        <field name="name">socio_tree</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
            <tree string="Socios" create="false">
                <field name="nombre"/>
                <field name="genero"/>
                <field name="fecha_nac"/>
            </tree>
        </field>
    </record>


    <record id="berp_21052019_2054_action_todos" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="berp_21052019_2054_action_atl" model="ir.actions.act_window">
        <field name="name">Atletas</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Atleta')]</field>
    </record>

    <record id="berp_21052019_2054_action_sin_ficha" model="ir.actions.act_window">
        <field name="name">Socios Sin Ficha</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Sin_ficha')]</field>
    </record>

    <record id="berp_21052019_2054_action_entrenadores" model="ir.actions.act_window">
        <field name="name">Entrenadores</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tipo','=','Entrenador')]</field>
    </record>

    <record id="berp_21052019_2054_action_mi_grupo" model="ir.actions.act_window">
        <field name="name">Compañeros</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('visible','=',True)]</field>
    </record>


    <record model="ir.ui.view" id="berp_14082019_1803_form">
        <field name="name">socio_alta_form</field>
        <field name="model">berp.socio</field>
        <field name="arch" type="xml">
            <form string="Socio">
                <field name="imagen" widget="image" class="oe_avatar" nolabel="1"/>
                <div class="oe_title">
                    <label for="Nombre" class="oe_edit_only" string="Nombre"/>
                    <h1>
                        <field name="nombre" placeholder="Nombre del Socio" nolabel="1"/>
                    </h1>
                </div>
                <br/>
                <br/>
                <hr/>
                <separator string="Información General"/>
                <group col="4">
                    <field name="dni" groups="berp.berp_admin, berp.berp_dt"/>
                    <field name="direccion" groups="berp.berp_admin, berp.berp_dt"/>
                    <field name="correo"/>
                    <field name="telefono"/>
                    <field name="fecha_nac"/>
                    <field name="fecha_alta"/>
                    <field name="nacionalidad" options="{'limit': 20, 'no_open': True, 'no_create': True, 'create_edit': false}"/>
                </group>
                <hr/>
                <separator string="Información bancaria"/>
                <group col="4">
                    <field name="cuenta_banc"/>
                    <field name="titular_cc"/>
                </group>
                <hr/>
                <separator string="Otra información"/>
                <group col="4">
                    <field name="nombre_cont"/>
                    <field name="telef_cont"/>
                </group>
            </form>
        </field>
    </record>

    <record id="berp_14082019_1800_action_todos" model="ir.actions.act_window">
        <field name="name">Alta Socio</field>
        <field name="res_model">berp.socio</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
	    <field name="target">new</field>
        <field name="view_id" ref="berp_14082019_1803_form" />
    </record>

</odoo>