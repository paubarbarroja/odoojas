<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="jas_21052019_2053_tree">
        <field name="name">Atleta_tree</field>
        <field name="model">berp.atleta</field>
        <field name="arch" type="xml">
            <tree string="Atletas">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="jas_21052019_2053_form">
        <field name="name">Atleta_form</field>
        <field name="model">berp.atleta</field>
        <field name="arch" type="xml">
            <form string="Atleta" version="7.0">
                <sheet>
                    <div id="o_employee_container"><div id="o_employee_main">
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" string="Nombre" required="True"/>
                            </h1>
                        </div>

                    </div></div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="jas_21052019_2053_action" model="ir.actions.act_window">
        <field name="name">Atletas</field>
        <field name="res_model">berp.atleta</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>