<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="helipistas_modulo"> <!--id del tree-->
        <field name="name">helipistas.modulo</field> <!--Nombre del tree-->
        <field name="model">helipistas.modulo</field> <!--_name del Model py al que hacemos referencia-->
        <field name="arch" type="xml">
            <tree string="Modulo"> <!--Aqui creamos el tree-->
                <field name="descripcion"/> <!--Referenia a los fields declarados en modulo.py-->
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="helipistas_modulo">
        <field name="name">helipistas.modulo</field>
        <field name="model">helipistas.modulo</field>
        <field name="arch" type="xml">
            <form string="MOdulo" version="7.0">
                <field name="descripcion" string="descripcion"/>
            </form>
        </field>
    </record>

    <record id="helipistas_modulo_action" model="ir.actions.act_window">
        <field name="name">Modulo</field>
        <field name="res_model">helipistas.modulo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>